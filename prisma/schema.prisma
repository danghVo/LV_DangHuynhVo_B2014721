generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  uuid         String   @id @default(uuid())
  email        String   @unique
  password     String
  name         String
  age          Int
  avatar       String?
  refreshToken String?
  createAt     DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isVerify     Boolean  @default(false)
  verifyToken  String?
  role         UserRole
}

enum UserRole {
  TEACHER
  STUDENT
}
